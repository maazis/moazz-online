---
import Layout from "../layouts/Layout.astro";
import {
  content,
  FOOTER_TEXT_1,
  FOOTER_TEXT_2,
  FOOTER_TEXT_3,
  SPOTIFY_EMBED_URL,
} from "../utils/constants";
---

<Layout>
  <main class="text-primary can-bg-change">
    <!-- small screen -->
    <div class="md:hidden flex flex-col gap-8 p-4">
      <div
        class="flex justify-center gap-12 font-national-park font-bold text-sm"
      >
        <a
          href={content.links.samples.url}
          target="_blank"
          rel="noopener noreferrer"
          class="link"
        >
          <span class="flex items-center gap-1">
            <i class={content.links.samples.iconClass}></i>
            {content.links.samples.text}
          </span>
        </a>
        <a
          href={content.links.resume.url}
          target="_blank"
          rel="noopener noreferrer"
          class="link"
        >
          <span class="flex items-center gap-1">
            <i class={content.links.resume.iconClass}></i>
            {content.links.resume.text}
          </span>
        </a>
      </div>

      <div class="text-center">
        <h1
          class="font-special-gothic-expanded text-4xl mb-1 name-hover-trigger"
        >
          {content.name1}
          {content.name2}
        </h1>
        <p class="text-xs italic font-national-park">{content.subtitle}</p>
      </div>

      <div>
        <p class="font-national-park font-semibold mb-1 text-center text-sm">
          {content.currentWorks.title}
        </p>
        <ul class="px-3 list-none text-xs text-center">
          {content.currentWorks.items.map((item) => <li>{item}</li>)}
        </ul>
      </div>

      <div class="flex flex-col items-center gap-1 font-national-park text-sm">
        {
          Object.entries(content.contactItems).map(([key, info]) => (
            <a
              href={info.url}
              target="_blank"
              rel="noopener noreferrer"
              class="link"
            >
              <span class="flex items-center gap-1">
                <i class={info.iconClass} />
                {info.text}
              </span>
            </a>
          ))
        }
      </div>

      <div>
        {
          Object.entries(content.roles).map(([key, role]) => (
            <div class={key === "engineer" ? "mt-4" : ""}>
              <p class="font-national-park font-semibold mb-1 text-sm">
                {role.title}
              </p>
              <ul class="px-3 list-disc text-xs">
                {role.items.map((item) => (
                  <li>{item}</li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>

      <div>
        <p class="font-national-park font-semibold mb-1 text-sm">
          {content.interestItems.title}
        </p>
        <ul class="px-3 list-disc text-xs">
          {content.interestItems.items.map((item) => <li>{item}</li>)}
        </ul>
      </div>

      <div class="w-full">
        <iframe
          style="border-radius:12px"
          src={SPOTIFY_EMBED_URL}
          width="100%"
          height="80"
          allowfullscreen=""
          allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
          loading="lazy"
          title="Spotify Music Player"
        >
        </iframe>
      </div>

      <div
        class="mb-2 flex flex-col items-center justify-center font-coral-pixels text-sm"
      >
        <a href="/about-this-website">{FOOTER_TEXT_2}</a>
        {FOOTER_TEXT_1}
        <p class="font-barcode">{FOOTER_TEXT_3}</p>
      </div>
    </div>

    <!-- large screen -->
    <div
      class="hidden md:grid h-screen w-full grid-cols-3 grid-rows-3 p-4 relative"
    >
      <div class="order-1 flex items-center justify-end">
        <a
          href={content.links.samples.url}
          target="_blank"
          rel="noopener noreferrer"
          class="link"
        >
          <span class="font-national-park font-bold flex items-start gap-1">
            <i class={content.links.samples.iconClass}></i>
            {content.links.samples.text}
          </span>
        </a>
      </div>
      <div class="order-2 flex items-center justify-center"></div>
      <div class="order-3 flex items-center justify-start">
        <a
          href={content.links.resume.url}
          target="_blank"
          rel="noopener noreferrer"
          class="link"
        >
          <span class="font-national-park font-bold flex items-start gap-1">
            <i class={content.links.resume.iconClass}></i>
            {content.links.resume.text}
          </span>
        </a>
      </div>
      <div class="order-4 flex items-center justify-end">
        <div>
          <p class="font-national-park font-semibold mb-2 text-center">
            {content.currentWorks.title}
          </p>
          <ul class="text-left list-disc">
            {content.currentWorks.items.map((item) => <li>{item}</li>)}
          </ul>
        </div>
      </div>
      <div
        class="order-5 flex flex-col items-center justify-center diagonal-squares"
      >
        <h1
          class="font-special-gothic-expanded text-5xl mb-2 text-left name-hover-trigger"
        >
          {content.name1}<br />{content.name2}
        </h1>
        <p class="font-national-park text-xs">{content.subtitle}</p>
      </div>
      <div class="order-6 flex flex-col items-start justify-center gap-6">
        {
          Object.entries(content.roles).map(([key, role]) => (
            <div>
              <p class="font-national-park font-semibold mb-1">{role.title}</p>
              <ul class="text-left list-disc text-sm">
                {role.items.map((item) => (
                  <li>{item}</li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
      <div
        class="order-7 flex flex-col items-start justify-end pl-6 font-coral-pixels text-sm"
      >
        <a
          class="hover:text-current/70 transition-all duration-50"
          href="/about-this-website">{FOOTER_TEXT_2}</a
        >
        {FOOTER_TEXT_1}
        <p class="font-barcode">{FOOTER_TEXT_3}</p>
      </div>
      <div class="order-8 flex items-center justify-center flex-col gap-1">
        {
          Object.entries(content.contactItems).map(([key, info]) => (
            <a
              href={info.url}
              target="_blank"
              rel="noopener noreferrer"
              class="link"
            >
              <span class="font-national-park flex items-center gap-1">
                <i class={info.iconClass} />
                {info.text}
              </span>
            </a>
          ))
        }
      </div>
      <div class="order-9 flex items-center justify-start">
        <div>
          <p class="font-national-park font-semibold mb-2">
            {content.interestItems.title}
          </p>
          <ul class="list-disc text-sm">
            {content.interestItems.items.map((item) => <li>{item}</li>)}
          </ul>
        </div>
      </div>

      <div class="absolute top-0 left-0 right-0 pt-6 flex justify-center">
        <iframe
          style="border-radius:12px"
          src={SPOTIFY_EMBED_URL}
          width="40%"
          height="80"
          allowfullscreen=""
          allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
          loading="lazy"
          title="Spotify Music Player"
        >
        </iframe>
      </div>
    </div>
  </main></Layout
>
